@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="main-content">
    <div class="toolbar">
        <action auth-code="membership.member.edit" text="添加" size="small" icon="&#xe608;" action="window:Membership/Member/TypeEdit" after="gridReload()"/>
        <action text="刷新" size="small" icon="&#x1002;" action="javascript:gridReload()" />
    </div>
    <table id="list">
    </table>
    <div id="pager"></div>
</div>
@section Scripts
{
    <script>
        layui.use(['layer'],
            function() {
                var $ = layui.jquery, layer = layui.layer;
            });

        $(function() {
            $("#list").vinoGrid({
                url: 'GetTypeList',
                colModel: [
                    { label: '名称', name: 'Name', width: 75 },
                    { label: '排序', name: 'OrderIndex', width: 40 },
                    { label: '创建时间', name: 'CreateTime', width: 100 },
                    {
                        label: '操作', name: 'Id', width: 100
                        , formatter: function(value, options, row) {
                            return gridFormatter_Operate([
                                { code: "membership.member.edit", title: "编辑", action: `window:Membership/Member/TypeEdit?id=${row.Id}` },
                                { code: "membership.member.delete", title: "删除", action: `post:TypeDelete?id=${row.Id}` }
                            ]);
                        }
                    }
                ],
                pager: "#pager"
            });
        });
    </script>
}
