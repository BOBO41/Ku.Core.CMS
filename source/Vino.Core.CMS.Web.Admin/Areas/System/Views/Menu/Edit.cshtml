@{
    Layout = "~/Views/Shared/_WindowLayout.cshtml";
}
@using Vino.Core.CMS.Domain.Dto.System
@model MenuDto
<div class="window-content">
    <blockquote class="layui-elem-quote low">
        <span class="layui-breadcrumb">
            <a href="javascript:;">顶级菜单</a>
            @if (ViewBag.Parents != null)
            {
                foreach (var dto in ViewBag.Parents)
                 {
                     <a href="javascript:;">@dto.Name</a>
                 }
            }
        </span>
    </blockquote>
    @using (Html.LayuiBeginForm<MenuDto>("Save"))
    {
        @Html.LayuiHiddenFor(x => x.Id)
        @Html.LayuiHiddenFor(x => x.ParentId)
        @Html.LayuiTextBoxFor(x => x.Name)
        @Html.LayuiTextBoxFor(x => x.AuthCode)
        @Html.LayuiTextBoxFor(x => x.Url)
        @Html.LayuiTextBoxFor(x => x.Icon)
        @Html.LayuiSwitchFor(x => x.IsShow)
        @Html.LayuiTextBoxFor(x => x.OrderIndex)
        @Html.LayuiFormSubmitAndClose()
    }
</div>