@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Vino.Core.CMS.Service.System.Dto.UserDto
<div class="sub-page">
    <div class="layui-tab layui-tab-brief sub-page-tab" lay-filter="F_sub_tab">
        <ul class="layui-tab-title">
            <li data-url="Index">用户列表</li>
            @if ("Edit".Equals(ViewData["Mode"]))
            {
                <li data-url="Edit">添加用户</li>
                <li class="layui-this" data-url="">编辑用户</li>
            }
            else
            {
                <li class="layui-this" data-url="Edit">添加用户</li>
            }
        </ul>
        <div class="layui-tab-content">
            <div class="layui-tab-item layui-show">
                <form class="layui-form" id="inputForm" action="Save" method="post">
                    @Html.HiddenFor(x => x.Id)
                    <div class="layui-form-item">
                        <label class="layui-form-label">账户</label>
                        <div class="layui-input-inline">
                            <input type="text" name="Account" value="@Model.Account" autocomplete="off" lay-verify="required" class="layui-input">
                        </div>
                    </div>
                    <div class="layui-form-item">
                        <label class="layui-form-label">密码</label>
                        <div class="layui-input-inline">
                            <input type="password" name="Password" value="@Model.Password" autocomplete="off" lay-verify="required" class="layui-input">
                        </div>
                    </div>
                    <div class="layui-form-item">
                        <label class="layui-form-label">名称</label>
                        <div class="layui-input-inline">
                            <input type="text" name="Name" value="@Model.Name" lay-verify="required" class="layui-input">
                        </div>
                    </div>
                    <div class="layui-form-item">
                        <label class="layui-form-label">手机号</label>
                        <div class="layui-input-inline">
                            <input type="text" name="Mobile" value="@Model.Mobile" lay-verify="phone" class="layui-input">
                        </div>
                    </div>
                    <div class="layui-form-item">
                        <label class="layui-form-label">状态</label>
                        <div class="layui-input-block">
                            <input type="checkbox" name="IsEnable" @(Model.IsEnable? "checked" : "") lay-skin="switch" lay-text="可用|冻结">
                        </div>
                    </div>
                    <div class="layui-form-item layui-form-text">
                        <label class="layui-form-label">备注</label>
                        <div class="layui-input-block">
                            <textarea name="Remarks" placeholder="" class="layui-textarea">@Model.Remarks</textarea>
                        </div>
                    </div>
                    <div class="layui-form-item">
                        <div class="layui-input-block">
                            <button class="layui-btn" lay-submit>确认提交</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts
{
    <script>
        layui.use('form',
            function() {
                var form = layui.form();
                var layer = layui.layer;
                $("#inputForm").vinoForm({
                    onAfter: function(reply, options) {
                        vino.page.msg.tip('保存成功！', null, 2000, function() {
                            vino.page.navigateTo("Index", true);
                        });
                    }
                });
            });
    </script>
}
