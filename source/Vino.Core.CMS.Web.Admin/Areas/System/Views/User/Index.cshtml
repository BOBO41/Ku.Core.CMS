@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="main-content">
    <div class="toolbar">
        <action auth-code="sys.user.edit" text="添加" size="small" icon="&#xe608;" action="window:System/User/Edit"/>
        <action text="刷新" size="small" icon="&#x1002;" action="javascript:gridReload()" />
    </div>
    <table id="list">
    </table>
    <div id="pager"></div>
</div>
@section Scripts
{
    <script>
        layui.use(['layer'],
            function() {
                var $ = layui.jquery, layer = layui.layer;
            });

        $(function() {
            $("#list").vinoGrid({
                url: 'GetList',
                colModel: [
                    { label: '账户', name: 'Account', width: 45 },
                    { label: '姓名', name: 'Name', width: 75 },
                    { label: '手机', name: 'Mobile', width: 100 },
                    { label: '状态', name: 'IsEnable', width: 90, formatter: gridFormatter_Is },
                    { label: '创建时间', name: 'CreateTime', width: 100 },
                    { label: '登陆时间', name: 'LastLoginTime', width: 100 },
                    {
                        label: '操作', name: 'Id', width: 100
                        , formatter: function(value, options, row) {
                            return gridFormatter_Operate([
                                { code: "sys.user.edit", title: "编辑", action: `window:System/User/Edit?id=${row.Id}` },
                                { code: "sys.user.delete", title: "删除", action: `post:Delete?id=${row.Id}` }
                            ]);
                        }
                    }
                ],
                pager: "#pager"
            });
        });
    </script>
}
