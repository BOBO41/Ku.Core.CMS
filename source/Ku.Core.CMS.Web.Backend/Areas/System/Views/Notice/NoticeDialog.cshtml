@{
    Layout = "~/Views/Shared/_WindowLayout.cshtml";
}
@using Vino.Core.CMS.Domain.Dto.System
@model List<NoticeDto>
<div class="layui-layout layui-layout-window">
    <div class="layui-body">
        <div class="layui-collapse" lay-accordion>
            @foreach (NoticeDto item in Model)
            {
            <div class="layui-colla-item">
                <h2 class="layui-colla-title">
                    @if (item.StickyNum > 0)
                    { 
                        <span class="layui-badge">置顶</span> 
                    } 
                    @item.Title
                    <span style="float:right;">@item.PublishedTime 发布</span></h2>
                <div class="layui-colla-content">
                @if (item.ContentType == Vino.Core.CMS.Domain.Enum.EmDefaultContentType.Text)
                {
                    @Html.Raw(item.Content.Replace("\r\n", "</br>").Replace("\n", "</br>"))
                }else if (item.ContentType == Vino.Core.CMS.Domain.Enum.EmDefaultContentType.RichText)
                {
                    @Html.Raw(item.Content)
                }
                </div>
            </div>
            }
        </div>
    </div>
    <div class="layui-footer">
        <button class="layui-btn layui-btn-sm" action="javascript:gotoList()">查看所有公告</button>
        <action text="关 闭" css="layui-btn-warm" action="javascript:closeWindow()" />
    </div>
</div>
@section Scripts
    {
    <script>
        layui.use(['element'], function () {
            var element = layui.element;
            $(".layui-collapse .layui-colla-content:first").addClass("layui-show");
        });

        function gotoList() {
            parent.openTab("notice");
            closeWindow();
        }
    </script>
}
