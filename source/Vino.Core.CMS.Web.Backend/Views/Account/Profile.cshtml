@{
    Layout = "~/Views/Shared/_FormLayout.cshtml";
}
@using Vino.Core.CMS.Domain.Dto.System
@model UserDto
<div class="layui-fluid">
    <div class="layui-card">
        <div class="layui-tab layui-tab-brief" lay-filter="tabMian">
            <ul class="layui-tab-title">
                <li lay-id="main" class="layui-this">我的资料</li>
            </ul>
            <div class="layui-tab-content">
                <div class="layui-tab-item layui-show">
                    @using (Html.BeginForm<UserDto>("SaveProfile"))
                    {
                        @Html.InputFor(x => x.Id)
                        @Html.InputFor(x => x.Name)
                        <div class="layui-form-item">
                            <label class="layui-form-label">头像</label>
                            <div id="HeadImage" class="layui-input-block">
                            </div>
                        </div>
                        @Html.InputFor(x => x.Mobile)
                        @Html.InputFor(x => x.Email)
                        @Html.InputFor(x => x.Remarks)
                        <div class="layui-form-item">
                            <div class="layui-input-block">
                                <action auth-code="" text="确认修改" lay-submit="" css="layui-btn-default" type="submit" />
                                <action text="重新填写" type="reset"  css="layui-btn-primary" />
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts
    {
    <script src="~/js/vino/vino.image.picker.js"></script>
    <script>
        layui.use(['element', 'form'], function () {
            var element = layui.element;
            var form = layui.form;

            $("#HeadImage").vinoImagePicker({
                field_path: "HeadImage",
                max_count: 1
            });

            $("#HeadImage").vinoImagePicker("loadImage", '@Html.Raw(Model.HeadImage)');
        });
    </script>
}
