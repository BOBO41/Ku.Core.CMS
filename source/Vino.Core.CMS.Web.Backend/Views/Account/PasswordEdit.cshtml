@{
    Layout = "~/Views/Shared/_FormLayout.cshtml";
}
@using Vino.Core.CMS.Web.Backend.Models
@model PwdData
<div class="layui-fluid">
    <div class="layui-card">
        <div class="layui-card-header">修改密码</div>
        <div class="layui-card-body">
            @using (Html.BeginForm<PwdData>("SavePassword"))
            {
                @Html.AntiForgeryToken()
                @Html.InputFor(x => x.CurrentPassword)
                @Html.InputFor(x => x.NewPassword)
                @Html.InputFor(x => x.ConfirmPassword)
                <div class="layui-form-item">
                    <div class="layui-input-block">
                        <action auth-code="" text="确认修改" lay-submit="" css="layui-btn-default" type="submit" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>