@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="main-content">
    <div class="toolbar">
        <action id="upload" auth-code="material.picture.upload" text="上传图片" size="small" icon="&#xe67c;" action="window:Material/Picture/Upload"/>
        <action text="刷新" size="small" icon="&#x1002;" action="javascript:gridReload()" />
    </div>
    <table id="list">
    </table>
</div>
@section Scripts
{
    <script>
        $(function () {
            $("#list").vinoGrid({
                url: 'GetList',
                size:'lg',
                cols: [[
                    {
                        field: 'Name', title: '图片', width: 120, align: 'center'
                        , templet: '<div><img src="{{d.FilePath}}" /></div>'
                    },
                    { field: 'FileName', title: '文件名', width: 130 },
                    { field: 'FileType', title: '文件类型', width: 90 },
                    { field: 'Md5Code', title: 'MD5码', width: 120 },
                    {
                        field: 'FileSize', title: '文件大小', width: 90, align: 'center'
                        , templet: '<div>{{# var s = (d.FileSize / 1014).toFixed(1) }} {{s}} kb</div>'
                    },
                    { field: 'FilePath', title: '文件路径', width: 160 },
                    { field: 'CreateTime', title: '上传时间', width: 160 },
                    {
                        title: '操作', fixed: 'right', width: 165, align: 'center',
                        toolbar: grid_templet_operate([
                            { code: "membership.member.edit", title: "编辑", action: `window:Membership/Member/Edit?id={{d.Id}}` },
                            { code: "membership.member.delete", title: "删除", action: `post:Delete?id={{d.Id}}` }
                        ])
                    }
                ]]
            });
        });
    </script>
}
