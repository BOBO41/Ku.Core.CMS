@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="main-content">
    <div class="toolbar">
        <action auth-code="membership.member.edit" text="添加" size="small" icon="&#xe608;" action="window:Membership/Member/TypeEdit" after="gridReload()"/>
        <action text="刷新" size="small" icon="&#x1002;" action="javascript:gridReload()" />
    </div>
    <table id="list">
    </table>
</div>
@section Scripts
{
    <script>
        $(function () {
            $("#list").vinoGrid({
                url: 'GetTypeList',
                cols: [[
                    { field: 'Name', title: '名称', width: 150 },
                    { field: 'OrderIndex', title: '排序', width: 130 },
                    { field: 'CreateTime', title: '创建时间', width: 160 },
                    {
                        title: '操作', fixed: 'right', width: 165, align: 'center',
                        toolbar: grid_templet_operate([
                            { code: "membership.member.type.edit", title: "编辑", action: `window:Membership/Member/TypeEdit?id={{d.Id}}` },
                            { code: "membership.member.type.delete", title: "删除", action: `post:TypeDelete?id={{d.Id}}` }
                        ])
                    }
                ]]
            });
        });
    </script>
}
