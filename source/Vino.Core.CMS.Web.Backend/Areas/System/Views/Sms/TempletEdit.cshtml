@{
    Layout = "~/Views/Shared/_WindowLayout.cshtml";
}
@using Vino.Core.CMS.Domain.Dto.System
@model SmsTempletDto
<div class="layui-layout layui-layout-window">
    @using (Html.BeginForm<SmsTempletDto>("TempletSave"))
    {
    <div class="layui-body">
        @Html.InputFor(x => x.Id)
        @Html.InputFor(x => x.Tag, x => x.Name)
        @Html.InputFor(x => x.Example)
        @Html.InputFor(x => x.Templet)
        @Html.InputFor(x => x.TempletKey, x => x.Signature)
        @Html.InputFor(x => x.IsEnable)
        <div class="layui-form-item">
            <label class="layui-form-label">短信账户</label>
            <div class="layui-input-block">
                <select name="SmsAccountId" lay-verify="required" lay-filter="SmsAccountId">
                    <option value="">请选择短信账户</option>
                    @foreach (SmsAccountDto account in ViewBag.Accounts)
                    {
                        if (account.Id == Model.SmsAccountId)
                        {
                            <option value="@account.Id" selected="selected">@account.Name</option>
                        }
                        else
                        {
                            <option value="@account.Id">@account.Name</option>
                        }
                    }
                </select>
            </div>
        </div>
    </div>
    <div class="layui-footer">
        @Html.ActionsForSubmitAndClose()
    </div>
    }
</div>
@section Scripts
    {
    <script>
        layui.use(['form'], function () {
            var form = layui.form;
        });
    </script>
}
