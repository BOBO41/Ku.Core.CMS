@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="main-content">
    <div class="toolbar">
        <action auth-code="wechat.user.tag.edit" text="添加" size="sm" icon="&#xe608;" action="window:WeChat/User/TagEdit" after="gridReload()" />
        <action text="刷新" size="sm" icon="&#x1002;" action="javascript:gridReload()" />
        <span style="position:absolute;right:20px;line-height:30px;">
            <form class="layui-form" action="">
                <div class="layui-form-item">
                    <label class="layui-form-label">公众号</label>
                    <div class="layui-input-block">
                        <select id="scAccount" lay-verify="required">
                            @foreach (var account in ViewBag.Accounts)
                            {
                            <option value="@account.Id">@account.Name</option>
                            }
                        </select>
                    </div>
                </div>
            </form>
        </span>
    </div>
    <table id="list">
    </table>
</div>
@section Scripts
{
    <script>
        $(function () {
            var pm = getQueryParams();
            $("#list").vinoGrid({
                method: "post",
                url: 'GetTagList',
                where: pm,
                cols: [[
                    { field: 'Name', title: '名称', width: 150 },
                    {
                        title: '操作', fixed: 'right', width: 165, align: 'center',
                        templet: grid_templet_operate([
                            { code: "wechat.user.tag.edit", title: "编辑", action: `window:WeChat/User/TagEdit?id={{d.Id}}` },
                            { code: "wechat.user.tag.delete", title: "删除", action: `post:Delete?id={{d.Id}}` }
                        ])
                    }
                ]]
            });
        });

        function getQueryParams() { 
            var pm = {
                where: {}
            };
            pm.where.AccountId = $("#scAccount").val();
            pm.where.Keyword = "A";
            return pm;
        }
    </script>
}
