@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="main-content">
    <div class="toolbar">
        <action text="刷新" size="sm" icon="&#x1002;" action="javascript:gridReload()" />
        <action id="btnSync" auth-code="wechat.user.sync" text="数据同步" size="sm" action="" after="gridReload()" />
        <span style="position:absolute;right:10px;line-height:30px;">
            <form class="layui-form" action="">
                <div class="layui-form-item">
                    <label class="layui-form-label">公众号</label>
                    <div class="layui-input-block">
                        <select id="scAccount" lay-verify="required" lay-filter="account">
                            @foreach (var account in ViewBag.Accounts)
                            {
                            <option value="@account.Id">@account.Name</option>
                            }
                        </select>
                    </div>
                </div>
            </form>
        </span>
    </div>
    <table id="list">
    </table>
</div>
@section Scripts
{
    <script>
        layui.use(['form'], function () {
            var form = layui.form;
            form.on('select(account)', function (data) {
                $("#list").vinoGrid("search");
                $("#btnSync").attr("action", "window:WeChat/User/UserSync?AccountId=" + data.value);
            });
        });

        $(function () {
            $("#btnSync").attr("action", "window:WeChat/User/UserSync?AccountId=" + $("#scAccount").val());

            $("#list").vinoGrid({
                url: 'GetUserList',
                cols: [[
                    { field: 'Name', title: '名称', width: 150, sort:true },
                    {
                        title: '操作', fixed: 'right', width: 165, align: 'center',
                        templet: grid_templet_operate([
                            { code: "wechat.user.tag.edit", title: "编辑", action: `window:WeChat/User/TagEdit?id={{d.Id}}` },
                            { code: "wechat.user.tag.delete", title: "删除", action: `post:Delete?id={{d.Id}}` }
                        ])
                    }
                ]],
                onWhere: function () {
                    return {
                        AccountId: $("#scAccount").val()
                    };
                }
            });
        });
    </script>
}
